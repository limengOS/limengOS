#pragma once

#include <l4/sys/types.h>

namespace Ldr {

inline
char *adjust_sp(char *old_sp, l4_umword_t *offs = 0)
{
  if (offs)
    *offs = 0;
  return (char *)((l4_umword_t)old_sp & ~7);
}

}
